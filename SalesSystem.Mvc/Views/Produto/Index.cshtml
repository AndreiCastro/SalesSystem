@model List<SalesSystem.WebApi.Model.ProdutoModel>

@{
    ViewData["Title"] = "Produtos";
}
<meta charset="utf-8" />

<div class="cotainer">
    <div class="row justify-content-center">
        <div>

            <div class="d-grid gap-2 d-md-flex justify-context-md-start">
                <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Create">Adicionar novo produto</a>
            </div>
            <br />

            <div class="text-center">
                <h4 class="display-4">Lista de Produtos</h4>
            </div>

            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Unidade Medida</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Peso</th>
                        <th scope="col">Data Validade</th>                        

                    </tr>
                </thead>
                <tbody>

                    @if (Model != null && Model.Any())
                    {
                        foreach (var produto in Model)
                        {
                            <tr>
                                <th scope="row">@produto.Id</th>
                                <td>@produto.Nome</td>
                                <td>@produto.Descricao</td>
                                <td>R$ @produto.Preco</td>
                                <td>@produto.UnidadeMedida</td>
                                <td>@produto.Quantidade</td>
                                <td>@produto.Peso</td>
                                <td>@produto.DataValidade.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Update" asp-route-idProduto="@produto.Id">Editar</a>
                                        <a class="btn btn-danger" role="button" asp-controller="Produto" asp-action="Delete" asp-route-id="@produto.Id">Excluir</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>