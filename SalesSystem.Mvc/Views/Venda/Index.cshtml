@model List<SalesSystem.WebApi.Model.VendaModel>

@{
    ViewData["Title"] = "Vendas";
}
<meta charset="utf-8" />

<div class="cotainer">
    <div class="row justify-content-center">
        <div>
            <div class="text-center">

                <div class="d-grid gap-2 d-md-flex justify-context-md-start">
                    <a class="btn btn-primary" role="button" asp-controller="Venda" asp-action="Create">Registrar venda</a>
                </div>
                <br />
                <br />

                @if (TempData["MensagemSucesso"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                        @TempData["MensagemSucesso"]
                    </div>
                }

                <h4 class="display-4">Lista de Vendas</h4>

                <table class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col">Código</th>
                            <th scope="col">Produto</th>
                            <th scope="col">Cliente</th>
                            <th scope="col">Data Venda</th>
                            <th scope="col">Quantidade</th>
                            <th scope="col">Valor Total</th>
                            <th scope="col">Descrição</th>
                            <th scope="col">Desconto</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Any())
                        {
                            foreach (var venda in Model)
                            {
                                <tr>
                                    <th scope="row">@venda.Id</th>
                                    <td>@venda.Produto.Nome</td>
                                    <td>@venda.Cliente.Nome</td>
                                    <td>@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                                    <td>@venda.QuantidadeProduto</td>
                                    <td>R$ @venda.ValorTotal</td>
                                    <td>@venda.Descricao</td>
                                    @if (venda.Desconto != null)
                                    {
                                        <td>R$ @venda.Desconto</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-danger" role="button" asp-controller="Venda" asp-action="Delete" asp-route-id="@venda.Id">Excluir</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>